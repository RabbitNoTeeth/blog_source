.home {
}

.home_card_container {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-gap: 2rem;
    margin-bottom: 1.5rem;

    .home_card {
        border-radius: 1rem;
        background-color: #eee;
        display: flex;
        flex-direction: column;

        .home_card_title {
            padding: 1rem;
            font-weight: bold;
            border-bottom: 1px solid #ccc;
            color: #42b983;
            font-size: 1.2rem;
        }

        .home_card_content {
            padding: 1rem;
            flex: 1;
        }

        .home_card_foot {
            padding: 1rem;
            text-align: right;
            font-size: .9rem;
        }
    }

}


